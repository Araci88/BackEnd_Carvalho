<h1>Incorporación de Productos</h1>

<form action="/realTimeProducts" id="formProducts">
    <label for="title">Nombre</label>
    <input id="formTitle" type="text" name="title" placeholder="Nombre">
    <label for="description">Descripción</label>
    <input id="formDescription" type="text" name="description" placeholder="Descripción">
    <label for="price">Precio</label>
    <input id="formPrice" type="number" name="price" placeholder="Precio">
    <label for="stock">Stock</label>
    <input id="formStock" type="number" name="stock" placeholder="Stock">
    <label for="thumbnail">Imágen</label>
    <input id="formImg" type="file" name="thumbnail">
    <label for="category">Categoría</label>
    <input id="formCategory" type="text" name="category" placeholder="Categoría">
    <button id="createProd">Enviar</button>
</form>

<div>
    <p id="message"></p>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>